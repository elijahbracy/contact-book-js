extends layout 

block content 
    style.
        .container {
            padding: 5em
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }
        .back-btn {
            background-color: #2ECCFA;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
            margin-top: 5px;
            margin-bottom: 5px;
        }
    
    .container
        h1 Delete Contact 
        h2 #{contact.first + ' ' + contact.last}
        p Are you sure you want to delete this contact?
        form(action='/' + contact.id + '/delete', method='post')
            button(type='submit') Yes!
            a.back-btn(href='/' + contact.id) Nevermind