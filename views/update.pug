extends layout.pug

block content
    style.
        .container {
            padding: 5em
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            justify-content: center;
            align-items: center;
        }
        .fieldset-border {
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 10px;
            margin-bottom: 10px;
        }
        .back-btn {
            background-color: #2ECCFA;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
            margin-top: 5px;
            margin-bottom: 5px;
        }

    .container
        h1 Update Contact
        form(action='/' + contact.id + '/edit', method='post')
            fieldset.fieldset-border
                legend Basic Info
                section 
                    label(for='first') First Name: 
                    br
                    input(type='text', value=contact.first, name='first')
                section 
                    label(for='last') Last Name: 
                    br
                    input(type='text', value=contact.last, name='last')
                section 
                    label(for='phone') Phone: 
                    br
                    input(type='text', value=contact.phone, name='phone')
                section 
                    label(for='email') email: 
                    br
                    input(type='text', value=contact.email, name='email')
            fieldset.fieldset-border
                legend Address
                section 
                    label(for='street') Street: 
                    br
                    input(type='text', value=contact.street, name='street')
                section 
                    label(for='city') City: 
                    br
                    input(type='text', value=contact.city, name='city')
                section 
                    label(for='state') State: 
                    br
                    input(type='text', value=contact.state, name='state')
                section 
                    label(for='zip') Zip: 
                    br
                    input(type='text', value=contact.zip, name='zip')
                section 
                    label(for='country') Country: 
                    br
                    input(type='text', value=contact.country, name='country')
            fieldset.fieldset-border
                legend Contact Preferences
                section 
                    input(type='checkbox', name='contact_by_phone', checked=contact.contact_by_phone ? 'checked' : null)
                    label(for='contact_by_phone') Contact by phone 
                section 
                    input(type='checkbox', name='contact_by_email', checked=contact.contact_by_email ? 'checked' : null)
                    label(for='contact_by_email') Contact by email
                section 
                    input(type='checkbox', name='contact_by_mail', checked=contact.contact_by_mail ? 'checked' : null)
                    label(for='contact_by_mail') Contact by mail
            button(type='submit') Update
            a.back-btn(href='/') Cancel
